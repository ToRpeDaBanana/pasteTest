{% extends 'index.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="main-container">
    <div class="content">
        <h2 class="text-center">Пожалуйста, войдите</h2>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">Неверное имя пользователя или пароль.</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3 text-center">
                    Вы вошли как {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Выйти</a>
                </div>
            {% endif %}

            <div class="form-group">
                <label for="username">Имя пользователя</label>
                <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
            </div>

            <div class="form-group">
                <label for="password">Пароль</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="button-container text-center">
                <button class="btn btn-lg btn-primary" type="submit">Войти</button>
                <a href="{{ path('register') }}" class="btn btn-lg btn-secondary ml-2">Регистрация</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
