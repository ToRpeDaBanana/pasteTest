{% extends 'index.html.twig' %}

{% block title %}Account{% endblock %}

{% block body %}
    <div class="paste-table">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>

                        <th scope="col">Language</th>

                        <th scope="col">ExpirationTime</th>

                        <th scope="col">AccessLevel</th>
                    </tr>
                </thead>
        <tbody>
        {% if pasteData is not empty %}
            {% for paste in pasteData %}
                <tr>
                    <th scope="row">{{ loop.index + (page - 1) * limit }}</th>
                    <td>{{paste.title}}</td>
                    <td>{{paste.language}}</td>
                    <td>{{ paste.expirationTime ? paste.expirationTime : 'No Expiration' }}</td>
                    <td>{{paste.accessLevel}}</td>
                </tr>
            
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
    <nav aria-label="Page navigation">
            <ul class="pagination">
                {% for i in 1..(total / limit)|round(0, 'ceil') %}
                    <li class="page-item {{ i == page ? 'active' : '' }}">
                        <a class="page-link" href="?page={{ i }}">{{ i }}</a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
</div>
{% endblock %}
