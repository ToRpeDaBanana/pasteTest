{% extends 'index.html.twig' %}

{% block title %}{{ paste.title }}{% endblock %}

{% block body %}
    <div class="main-container">
        <div class="content">
            <h2 class="text-center">{{ paste.title }}</h2>
            <div class="paste-table mt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Содержимое</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="paste-content">
                                    <pre><code class="language-{{ paste.language }}">{{ paste.content }}</code></pre>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <div class="button-group mt-3">
                <a href="{{ path('app_index_page') }}" class="btn btn-primary">На главную</a>
                {% if user is not null and paste.user is not null and user.id == paste.user.id %}
                    <a href="{{ path('app_personal_account') }}" class="btn btn-secondary">Назад к аккаунту</a>
                {% endif %}
            </div>
        </div>

    </div>
{% endblock %}
