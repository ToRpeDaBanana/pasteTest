{% extends 'index.html.twig' %}

{% block body %}
<div class="main-container">
    <div class="content">
        <h2 class="text-center">Регистрация</h2>
        {{ form_start(form) }}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}

            <div class="form-group">

                {{ form_row(form.username, { 'attr': {'class': 'form-control', 'id': 'username', 'autocomplete': 'username', 'required': true} }) }}
            </div>

            <div class="form-group">

                {{ form_row(form.password, { 'attr': {'class': 'form-control', 'id': 'password', 'autocomplete': 'new-password', 'required': true} }) }}
            </div>

            <div class="button-container text-center">
                {{ form_row(form.submit, { 'attr': {'class': 'btn btn-lg btn-primary', 'type': 'submit'} }) }}
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
