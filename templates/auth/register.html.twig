{% extends 'index.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <h1>Register</h1>

    <h1>Login</h1>
    {{ form_start(form) }}
        {{ form_row(form.username) }}
        {{ form_row(form.password) }}
        {{ form_row(form.submit) }}
    {{ form_end(form) }}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}

{% endblock %}