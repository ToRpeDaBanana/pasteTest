<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}PasteTest{% endblock %}</title>

        {% block stylesheets %}
            {{encore_entry_link_tags('app')}}
        {% endblock %}


    </head>
    <body>
        {% block body %}

            <h2>Recent Pastes</h2>
            <ul>
            {% if (pastes is not empty) %}
                {% for paste in pastes %}
                    <li>{{ paste.title }} - {{ paste.content }}</li>
                {% endfor %}
            {% endif %}
            </ul>

        {% endblock %}
    </body>
</html>
